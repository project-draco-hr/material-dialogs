{
  ColorStateList sl=new ColorStateList(new int[][]{new int[]{-android.R.attr.state_checked},new int[]{android.R.attr.state_checked}},new int[]{DialogUtils.resolveColor(radioButton.getContext(),R.attr.colorControlNormal),color});
  if (Build.VERSION.SDK_INT >= Build.VERSION_CODES.LOLLIPOP) {
    radioButton.setButtonTintList(sl);
  }
 else {
    Drawable d=DrawableCompat.wrap(ContextCompat.getDrawable(radioButton.getContext(),R.drawable.abc_btn_radio_material));
    DrawableCompat.setTintList(d,sl);
    radioButton.setButtonDrawable(d);
  }
}
