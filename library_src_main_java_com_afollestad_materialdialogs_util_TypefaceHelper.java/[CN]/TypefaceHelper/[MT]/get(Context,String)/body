{
synchronized (cache) {
    if (!cache.containsKey(name)) {
      try {
        Typeface t=Typeface.createFromAsset(c.getAssets(),String.format("fonts/%s.ttf",name));
        cache.put(name,t);
        return t;
      }
 catch (      RuntimeException e) {
        return null;
      }
    }
    return cache.get(name);
  }
}
