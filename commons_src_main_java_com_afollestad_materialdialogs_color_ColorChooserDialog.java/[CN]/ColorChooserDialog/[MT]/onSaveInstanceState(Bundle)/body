{
  super.onSaveInstanceState(outState);
  outState.putInt("top_index",topIndex());
  outState.putBoolean("in_sub",isInSub());
  outState.putInt("sub_index",subIndex());
  outState.putBoolean("in_custom",mColorChooserCustomFrame != null && mColorChooserCustomFrame.getVisibility() == View.VISIBLE);
}
