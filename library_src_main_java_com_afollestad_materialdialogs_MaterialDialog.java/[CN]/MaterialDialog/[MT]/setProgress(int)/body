{
  if (mBuilder.progress <= -2)   throw new IllegalStateException("Cannot use setProgress() on this dialog.");
  mProgress.setProgress(progress);
  mHandler.post(new Runnable(){
    @Override public void run(){
      final int percentage=(int)(((float)getCurrentProgress() / (float)getMaxProgress()) * 100f);
      mProgressLabel.setText(percentage + "%");
      if (mProgressMinMax != null)       mProgressMinMax.setText(getCurrentProgress() + "/" + getMaxProgress());
    }
  }
);
}
