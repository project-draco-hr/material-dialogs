{
  new MaterialDialog.Builder(this).title(R.string.socialNetworks).items(R.array.socialNetworks).itemsCallbackSingleChoice(2,new MaterialDialog.ListCallback(){
    @Override public void onSelection(    MaterialDialog dialog,    View view,    int which,    String text){
      Toast.makeText(getApplicationContext(),which + ": " + text,Toast.LENGTH_SHORT).show();
    }
  }
).positiveText(R.string.choose).hideActions().build().show();
}
