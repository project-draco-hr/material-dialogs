{
  if (item.getItemId() == R.id.about) {
    new MaterialDialog.Builder(this).title(R.string.about).positiveText(R.string.dismiss).content(Html.fromHtml(getString(R.string.about_body))).contentLineSpacing(1.6f).callback(new MaterialDialog.SimpleCallback(){
      @Override public void onPositive(      MaterialDialog dialog){
      }
    }
).build().show();
    return true;
  }
  return super.onOptionsItemSelected(item);
}
